@model MvcMovie.Presentation.MovieListViewModel

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Movies", FormMethod.Get)) {
    <p>
        Genre: @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, Model.Genre), "All")
        Title: @Html.TextBoxFor(m => m.Filter)
        <input type="submit" value="Filter" />
    </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sample.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sample.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sample.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sample.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sample.Rating)
        </th>

        <th></th>
    </tr>
    @foreach (var movie in Model.Movies) {
        @Html.Partial("_MovieTableRow", movie)
    }
</table>